const int UCS_PAGE_SHIFT = 7;
const int UCS_PER_PAGE =   (1 << UCS_PAGE_SHIFT);

typedef struct {
	int			page;
	int[UCS_PER_PAGE]	offsets;
} charmap_t;

typedef struct {
	string		name;
	string		style;
	charmap_t[] 	charmap;
	int[]		outlines;
	int		ascender;
	int		descender;
	int		height;

	int		cur_page;
} font_t;

